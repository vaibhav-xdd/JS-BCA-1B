<!DOCTYPE html>
<html>
<head>
  <title>DOM Manipulation</title>
</head>
<body>

<h2>JavaScript DOM Manipulation</h2>

<div id="container">
  <p id="old">Old Paragraph</p>
</div>

<button onclick="addNode()">Add Element</button>
<button onclick="removeNode()">Remove Element</button>
<button onclick="modifyNode()">Modify Element</button>

<script>
  function addNode() {
    var para = document.createElement("p");
    para.innerHTML = "New Paragraph Added";
    document.getElementById("container").appendChild(para);
  }

  function removeNode() {
    var element = document.getElementById("old");
    element.remove();
  }

  function modifyNode() {
    document.getElementById("old").innerHTML = "Paragraph Modified";
  }
</script>

</body>
</html>
